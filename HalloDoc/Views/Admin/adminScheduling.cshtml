
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">



    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>

    <title>Admin Scheduling Page</title>
</head>

<body>

    <div class="container-fluid min-vh-100 d-flex flex-column justify-content-between create-patient-req-main full-content">
        <header>
            <partial name="admin_dashboard_header" />
        </header>
        <form method="post" class="row row-cols-1" enctype="multipart/form-data">
            <div class="main-create-patient-req d-flex justify-content-center align-items-center mt-1">
                <div class="row row-cols-1 justify-content-center align-items-center width-create-patient-req ">
                    <div class="col  d-flex justify-content-between gy-3">
                        <h3>Scheduling</h3>
                        <a class="btn back-btn mt-1" role="button" asp-controller="Admin" asp-action="adminDashboard"> < Back</a>

                    </div>
                    <div class="col d-flex flex-row justify-content-between gy-3">
                        <select id="region" class="form-select m-1 w-25" aria-label="Default select example">
                            <option selected>Select Region</option>
                            @* @if (Model != null)      
                            {
                            @foreach (var item in Model)
                            {
                            @if (item.RegionId != null)
                            {
                            <option value="@item.RegionId">@item.Name</option>
                            }
                            }
                            } *@

                        </select>
                        <div class="">
                            <button role="button" style="height:fit-content; border:none;" class="create-provider-btn p-1  mb-3">Providers On Call</button>
                            <button role="button" style="height:fit-content; border:none;" class="create-provider-btn  p-1  mb-3">Shifts For Review</button>
                            <button role="button" style="height:fit-content; border:none;" class="create-provider-btn  p-1  mb-3">Add New Shift</button>
                        </div>
                       
                    </div>
                    
                    <div class="col gy-3">
                        <h5>Monday, Dec 4,2023</h5>
                    </div>
                    <div class="col d-flex flex-row justify-content-end gy-3">
                        <div class="m-2" style="background-color:pink; width:5%;  opacity:0.5;"></div>
                       <div class="m-2 ">Pending Shifts</div>
                        <div class="m-2" style="background-color:green; width:5%; opacity:0.5;"></div>
                       <div class="m-2">Approved Shifts</div>
                       
                    </div>
                    <div class="col gy-3">
                        <span class="p-2 m-1" style="border-radius: 50%; color:white; background: #01bce9;"><</span>
                        <i class="fa-solid fa-calendar-days" style="color:grey;"> </i>
                        <span class="p-2 m-1" style="border-radius: 50%; color:white; background: #01bce9;">></span>
                      
                    </div>
                    <div class="col d-flex flex-row justify-content-end gy-3">

                        <button role="button" style=" border:none;" class="create-provider-btn p-2 m-2">Day</button>
                        <button role="button" style=" border:none;" class="create-provider-btn  p-2  m-2">Week</button>
                        <button role="button" style=" border:none;" class="create-provider-btn  p-2  m-2">Month</button>
                    </div>
                   
               </div>
            </div>
        </form>

        <footer class="d-flex justify-content-end align-items-baseline create-patient-req-footer ">
            <partial name="admin_dashboard_footer" />
        </footer>
    </div>
</body>
</html>