    </script>

    <script>
        $(document).ready(function () {


            setTimeout(function () {
                $('#new-state').trigger('click');
            }, 1);
            $('.card').click(function () {
                var type = $(this).attr("value");
                var requestState = "";
                switch (type) {
                    case "1":
                        requestState = "(New)";

                        break;
                    case "2":
                        requestState = "(Pending)";
                        break;
                    case "3":
                        requestState = "(Active)";
                        break;
                    case "4":
                        requestState = "(Conclude)";
                        break;
                    case "5":
                        requestState = "(To Close)";
                        break;
                    case "6":
                        requestState = "(Unpaid)";
                        break;
                    default:
                        requestState = "";
                        break;
                }
                $('#requestState').text(requestState);
                $.ajax({
                    url: "/Admin/adminTableData",
                    method: "POST",
                    data: { "type": type },
                    success: function (data) {
                        $('#tableContainer').html(data);
                    },
                    error: function () {
                        // Handle error
                    }
                });

                $.ajax({
                    url: "/Admin/getCountNumber",
                    method: "GET",
                   
                    success: function (data) {
                        $('#count_new').html(data[0]);
                        $('#count_pending').html(data[1]);
                        $('#count_active').html(data[2]);
                        $('#count_conclude').html(data[3]);
                        $('#count_toclose').html(data[4]);
                        $('#count_unpaid').html(data[5]);
                       
                    },
                    error: function () {

                    }
                });
            });
        });
    </script>



