
@using Microsoft.AspNetCore.Http;

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <title>Admin Dashboard Page</title>
</head>
<body>
    <div class="container-fluid min-vh-100 d-flex flex-column justify-content-between patient-dashboard-main full-content">
        <header>
            <partial name="admin_dashboard_header" />
        </header>
        <main>
           <div class="main-admin-dashboad d-flex flex-column justify-content-between">
                <div class="row justify-content-between  m-2 ">
                    <div class="card" role="button" id="new-state" value="1">
                        <div class="card-body">
                            <p><i class="fa-solid fa-circle me-1"></i> New</p>
                            <p id="count_new"> </p>
                        </div>
                    </div>
                    <div class="card" role="button" id="pending-state" value="2">
                        <div class="card-body">
                            <p><i class="fa-regular fa-user me-1"></i> Pending</p>
                            <p id="count_pending"></p>
                        </div>
                    </div>
                    <div class="card" role="button" id="active-state" value="3">
                        <div class="card-body">
                            <p><i class="fa-regular fa-circle-check me-1"></i> Active</p>
                            <p id="count_active"></p>
                        </div>
                    </div>
                    <div class="card" role="button" id="conclude-state" value="4">
                        <div class="card-body">
                            <p><i class="fa-regular fa-clock me-1"></i> Conclude</p>
                            <p id="count_conclude"></p>
                        </div>
                    </div>
                    <div class="card" role="button" id="toclose-state" value="5">
                        <div class="card-body">
                            <p><i class="fa-regular fa-user me-1"></i>To Close</p>
                            <p id="count_toclose"></p>
                        </div>
                    </div>
                    <div class="card" role="button" id="unpaid-state" value="6">
                        <div class="card-body">
                            <p><i class="fa-solid fa-dollar-sign me-1"></i>Unpaid</p>
                            <p id="count_unpaid"></p>
                        </div>
                    </div>

                </div>

                <div class="d-flex flex-row  justify-content-between m-2">
                    <div>
                        <h3>Patients <span id="requestState"></span></h3>
                    </div>
                    <div class="admin-buttons">
                        <a class="btn" href="#" role="button"><i class="fa-regular fa-paper-plane me-1"></i>Send Link</a>
                        <a class="btn" href="#" role="button"><i class="fa-regular fa-pen-to-square me-1"></i>Create Requests</a>
                        <a class="btn" href="#" role="button"><i class="fa-solid fa-share me-1"></i>Export</a>
                        <a class="btn" href="#" role="button"><i class="fa-solid fa-share me-1"></i>Export All</a>
                        <a class="btn" href="#" role="button"><i class="fa-regular fa-user me-1"></i>Request DTY Support</a>
                    </div>

                </div>
                <div class="d-flex admin-info-tags bg-white">
                    <div class="search-inputs d-flex">
                        <div class="form-floating m-2">
                            <input type="text" class="form-control serach shadow-none" id="floatingInput" placeholder="Search Patients">
                            <label class="" for="floatingInput"><i class="fa-solid fa-magnifying-glass me-1"></i> Search Patients</label>
                        </div>
                        <button class="btn  dropdown-toggle m-2" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false"><i class="fa-solid fa-magnifying-glass me-1"></i> All Regions</button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                            <li><a class="dropdown-item" href="#">1</a></li>
                            <li><a class="dropdown-item" href="#">2</a></li>
                            <li><a class="dropdown-item" href="#">3</a></li>
                        </ul>
                    </div>
                    <div class="color-dots d-flex flex-row m-2 p-2">
                        <a class="p-2 me-1" role="button" id="all">All</a>
                        <p><i class="fa-solid fa-circle me-1 p-2" style="color: #35d016;"></i>Patient</p>
                        <p><i class="fa-solid fa-circle me-1 p-2" style="color: #FFD43B;"></i>Family/Friend</p>
                        <p><i class="fa-solid fa-circle me-1 p-2" style="color: #e63368;"></i>Business</p>
                        <p><i class="fa-solid fa-circle me-1 p-2" style="color: #74C0FC;"></i>Conciege</p>
                        <p><i class="fa-solid fa-circle me-1 p-2" style="color: #B197FC;"></i>VIP</p>

                    </div>

                </div>
               

                 
                            <div id="tableContainer">
                                
                            </div>


                

           </div>



       </main>

        <footer class="d-flex justify-content-center align-items-baseline">
            <partial name="admin_dashboard_footer"/>
        </footer>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="/js/admin.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"> </script>

        <script>
        $(document).ready(function () {
                
                $('#new-state').click();

                $('.card').click(function () {
                    var type = $(this).attr("value");
                    var requestState = "";
                    switch (type) {
                        case "1":
                            requestState = "(New)";
                            
                            break;
                        case "2":
                            requestState = "(Pending)";
                            break;
                        case "3":
                            requestState = "(Active)";
                            break;
                        case "4":
                            requestState = "(Conclude)";
                            break;
                        case "5":
                            requestState = "(To Close)";
                            break;
                        case "6":
                            requestState = "(Unpaid)";
                            break;
                        default:
                            requestState = "";
                            break;
                    }
                    $('#requestState').text(requestState); 
                    $.ajax({
                        url: "/Admin/adminTableData",
                        method: "POST",
                        data: { "type": type },
                        success: function (data) {
                            $('#tableContainer').html(data);
                        },
                        error: function () {
                            // Handle error
                        }
                    });

                $.ajax({
                    url: "/Admin/getCountNumber",
                    method: "GET",
                    data: { "type": type },
                    success: function (data) {
                        if (type === "1") {
                            $('#count_new').html(data);
                        }
                        else if (type === "2"){
                            $('#count_pending').html(data);
                        }
                        else if (type === "3"){
                            $('#count_active').html(data);
                        }
                        else if (type === "4"){
                            $('#count_conclude').html(data);
                        }
                        else if (type === "5"){
                            $('#count_toclose').html(data);
                        }
                        else {
                            $('#count_unpaid').html(data);
                        }
                    },
                    error: function () {
                      
                    }
                });
                });
            });
    </script>






</body>
</html>