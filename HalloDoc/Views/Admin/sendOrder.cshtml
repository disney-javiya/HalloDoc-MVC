@model HalloDoc.DataAccessLayer.DataModels.ViewModels.sendOrder
@using Microsoft.AspNetCore.Http;

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <title>Admin View Case Page</title>
</head>
<body>
    <div class="container-fluid min-vh-100 d-flex flex-column justify-content-between  admin-dashboard-main full-content">
        <header>
            <partial name="admin_dashboard_header" />
        </header>
        <main>
            <div class="main-create-patient-req d-flex justify-content-center align-items-center mt-1">

                <div class="row row-cols-1 justify-content-center align-items-center width-create-patient-req ">
                    <div class="  d-flex justify-content-between flex-row mb-3">
                        <h3>Send Order</h3>
                        <button class="btn back-btn mt-1">< Back</button>
                    </div>
                    <div class="col-md-6">
                        @{
                            var addedHealthProfessionalType = new List<int>();
                        }
                        <select class="form-select p-3 mb-3" aria-label="Default select example">
                            <option selected>HealthProfession Type</option>

                            @foreach (var cs in Model.HealthProfessionalType)
                            {
                                <option value="@cs.HealthProfessionalId">@cs.ProfessionName</option>
                            }
                            @* @foreach (var item in Model)
                            {
                                @if (item.HealthProfessionalType != null)
                                {

                                    @foreach (var cs in item.HealthProfessionalType)
                                    {
                                        if (!addedHealthProfessionalType.Contains(cs.HealthProfessionalId))
                                        {
                                            addedHealthProfessionalType.Add(cs.HealthProfessionalId);
                                          
                                        }
                                    }
                                }
                            } *@
                        </select>
                    </div>
                    

                   
                       
                    
                    <div class="col-md-6">
                       @*  <div class="form-floating mb-3">
                            <input type="text" class="form-control last-name-create-patient shadow-none" id="floatingInput" placeholder="">
                            <label class="last-name-create-patient-text" for="floatingInput">Business</label>
                        </div> *@
                        @{
                            var addedHealthProfessional = new List<int>();
                        }
                        <select class="form-select p-3 mb-3" aria-label="Default select example">
                            <option selected>HealthProfessional</option>

                            @foreach (var cs in Model.HealthProfessional)
                            {
                                <option value="@cs.VendorId">@cs.VendorName</option>
                            }
                            </select>
                    </div>

                    <div class="col-md-6 ">
                        <div class="form-floating  mb-3">
                            <input type="text" class="form-control last-name-create-patient shadow-none" id="floatingInput" placeholder="">
                            <label class="last-name-create-patient-text" for="floatingInput">Business Contact</label>
                        </div>
                    </div>
                        <div class="col-md-6 gy-3 ">
                            <div class="form-floating mb-3">
                                <input type="email" class="form-control email-create-patient shadow-none" id="floatingInput" placeholder="name@example.com">
                                <label class="email-create-patient-text" for="floatingInput">Email address</label>
                            </div>
                        </div>
                    <div class="col-md-6  me-auto">
                            <div class="form-floating">
                                <input type="text" class="form-control last-name-create-patient shadow-none" id="floatingInput" placeholder="">
                                <label class="last-name-create-patient-text" for="floatingInput">Fax Number</label>
                            </div>
                        </div>
                   

                    <div class="col-md-12 gy-3">
                        <div class="form-floating mb-3">
                            <textarea class="form-control symptoms-create-patient shadow-none" placeholder="" id="floatingTextarea"></textarea>
                            <label class="symptoms-create-patient-text" for="floatingTextarea">Prescription or Order Details</label>
                        </div>
                    </div>

                    <div class="col-md-6 me-auto">
                        <select class="form-select p-3 mb-3" aria-label="Default select example">
                            <option selected>Number of Refill

                            </option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                    </div>


                    <div class="col d-flex justify-content-end mb-2">
                        <button class="btn submit-btn-create-patient me-2">Submit</button>
                        <button class="btn ms-1" style="border: 1px solid #01bce9; color: #01bce9;">Cancel</button>
                    </div>

                </div>
            </div>
        </main>

        <footer class="d-flex justify-content-end align-items-baseline">
            <partial name="admin_dashboard_footer" />
        </footer>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="/js/admin.js"></script>
</body>
</html>