@using Microsoft.AspNetCore.Http;
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <title>View Documents Page</title>
</head>
<body>
    <div class="container-fluid min-vh-100 d-flex flex-column justify-content-between view-documents-main full-content">
        <header>
            <partial name="dashboard_header" />
        </header>
        <main>

            <div class="main-viewdocuments d-flex flex-column">
                <div class="view-documents d-flex flex-column bg-white container">
                    <div class="d-flex flex-row" style="background-color: #F9F9F9;">
                        <h3>Documents</h3>
                        <a href="" role="btn" class="back-btn p-1 ms-auto mb-2">Back</a>
                    </div>
                    <p>Patient Name</p>
                    <b class="name-patient">Test Testing (mngsdhuh)</b>
                    <p>Check here for any files that you or the doctors of your subsequents requestors have attached for you to review.</p>
                    <div class="input-group mb-3">
                        <div class="form-floating">
                            <input type="text" class="form-control select-file-create-patient position-relative shadow-none" id="floatingInputGroup1" placeholder="Username">
                            <label class="select-file-create-patient-text" for="floatingInputGroup1">Select File</label>
                        </div>
                        <button class="btn upload-btn-create-patient" style="z-index: 1;"><i class="fa-solid fa-cloud-arrow-up me-2 " style="color: #ffffff;"></i>Upload <!--<input type="file" id="myFile" />-->  </button>

                    </div>
                    <div class="download d-flex flex-row">
                        <h3>Documents</h3>
                        <a href="" role="btn" class="download-btn p-1 ms-auto mb-2">Download All</a>
                    </div>  
                    <div class="data-table">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col"></th>
                                    <th scope="col">Uploader</th>
                                    <th scope="col">Upload Date</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td></td>
                                    <td>Abc</td>
                                    <td>12/10/2022</td>
                                    <td><button class="btn upload-btn-create-patient" style="z-index: 1;"><i class="fa-solid fa-cloud-arrow-up me-2 " style="color: #ffffff;"></i> <!--<input type="file" id="myFile" />-->  </button></td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td>Xyz</td>
                                    <td>12/10/2023</td>
                                    <td><button class="btn upload-btn-create-patient" style="z-index: 1;"><i class="fa-solid fa-cloud-arrow-up me-2 " style="color: #ffffff;"></i> <!--<input type="file" id="myFile" />-->  </button></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>

        <footer class="d-flex justify-content-center align-items-baseline">
            <partial name="dashboard_footer" />
        </footer>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="/js/custom.js"></script>
</body>
</html>