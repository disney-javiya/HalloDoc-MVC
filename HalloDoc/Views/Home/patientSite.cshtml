@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <title>Patient Site</title>
</head>
<body>

    <div class="container-fluid min-vh-100 d-flex flex-column justify-content-between patient-site-main">
        <div class="header d-flex justify-content-center">
            <img class="img-fluid mx-auto" src="/images/logo_dark.png" alt="">
            <div class="dark">
                <button class="btn ms-auto" onclick="darkModePatientSitePage()" style="border: none;"><i class="fa-regular fa-moon dark-icon p-1"></i></button>
            </div>
        </div>
        <div class="main d-flex justify-content-center align-items-center">
            <div class="row row-cols-1 justify-content-center align-items-center width ">
                <div class="col">
                    <div class="d-grid gap-2">
                        <button class="btn submitrequest-btn" asp-controller="Home" asp-action="patientSubmitRequestScreen">Submit A Request</button>
                        <button class="btn registered-btn  asp-controller="Home" asp-action="Index" >Registered Patients</button>
                    </div>
                </div>

            </div>
        </div>
        <footer class="d-flex justify-content-center align-items-baseline">
            <ul class="nav justify-content-center">
                <li class="nav-item">
                    <a class="nav-link terms-link  p-1" aria-current="page" href="#">Terms of Conditions</a>
                </li>
                <li class="nav-item">
                    <div class="vr" style="height: 35px;"></div>
                </li>
                <li class="nav-item">
                    <a class="nav-link privacy-link p-1" href="#">Privacy Policy</a>
                </li>
            </ul>
        </footer>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="/js/custom.js"></script>
    <script>
        const registeredButton = document.querySelector('.registered-btn');
        const submitRequestButton = document.querySelector('.submitrequest-btn');
        registeredButton.addEventListener("click", function () {
            window.location.href = "./index.html";
        });
        submitRequestButton.addEventListener("click", function () {
            window.location.href = "./patient-submit-request-page.html";
        });
    </script>
</body>
</html>